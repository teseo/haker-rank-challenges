<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="vendor/autoload.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
>
    <testsuites>
        <testsuite name="MatrixDifference">
            <directory>tests/MatrixDifferenceTest</directory>
        </testsuite>
        <testsuite name="PlusMinus">
            <directory>tests/PlusMinusTest</directory>
        </testsuite>
        <testsuite name="Staircase">
            <directory>tests/StaircaseTest</directory>
        </testsuite>
    </testsuites>
</phpunit>
